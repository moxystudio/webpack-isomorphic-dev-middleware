  },
  "dependencies": {
    "anser": "^1.3.0",
    "chalk": "^2.0.0",
    "compose-middleware": "^4.0.0",
    "lodash.merge": "^4.6.0",
    "memory-fs": "^0.4.1",
    "mkdirp": "^0.5.1",
    "p-props": "^1.0.0",
    "require-from-string": "^2.0.0",
