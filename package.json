    "husky": "^0.14.0",
    "jest": "^22.0.0",
    "lint-staged": "^6.0.0",
    "lodash.escaperegexp": "^4.1.2",
    "standard-version": "^4.2.0",
    "strip-ansi": "^4.0.0",
    "supertest": "^3.0.0",
    "webpack": "^3.0.0"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "test/tmp/",
      "test/configs/"
    ],
    "coveragePathIgnorePatterns": [
      "test/"
    ]
